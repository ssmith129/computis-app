{
  "$schema": "https://design-tokens.github.io/schema/v1",
  "name": "Computis Design Tokens - Shadows, Borders & Radii",
  "version": "1.0.0",
  "description": "Visual effect tokens for Computis crypto tax management platform",

  "borderRadius": {
    "base": {
      "value": "0.5rem",
      "px": "8px",
      "cssVar": "--radius",
      "description": "Base border radius value"
    },
    "scale": {
      "none": { "value": "0", "cssClass": "rounded-none" },
      "sm": { "value": "calc(var(--radius) - 4px)", "cssClass": "rounded-sm", "computed": "4px" },
      "md": { "value": "calc(var(--radius) - 2px)", "cssClass": "rounded-md", "computed": "6px" },
      "lg": { "value": "var(--radius)", "cssClass": "rounded-lg", "computed": "8px" },
      "xl": { "value": "0.75rem", "cssClass": "rounded-xl", "computed": "12px" },
      "2xl": { "value": "1rem", "cssClass": "rounded-2xl", "computed": "16px" },
      "full": { "value": "9999px", "cssClass": "rounded-full" }
    },
    "componentDefaults": {
      "button": "rounded-md",
      "card": "rounded-lg",
      "input": "rounded-md",
      "badge": "rounded-full",
      "dialog": "rounded-lg",
      "avatar": "rounded-full",
      "progress": "rounded-full"
    }
  },

  "shadows": {
    "none": {
      "value": "none",
      "cssClass": "shadow-none"
    },
    "sm": {
      "value": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
      "cssClass": "shadow-sm",
      "usage": "Subtle elevation"
    },
    "default": {
      "value": "0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1)",
      "cssClass": "shadow",
      "usage": "Cards, containers"
    },
    "md": {
      "value": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)",
      "cssClass": "shadow-md",
      "usage": "Dropdowns, popovers"
    },
    "lg": {
      "value": "0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)",
      "cssClass": "shadow-lg",
      "usage": "Modals, dialogs"
    },
    "xl": {
      "value": "0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1)",
      "cssClass": "shadow-xl",
      "usage": "Large floating elements"
    }
  },

  "borders": {
    "width": {
      "0": { "value": "0px", "cssClass": "border-0" },
      "1": { "value": "1px", "cssClass": "border" },
      "2": { "value": "2px", "cssClass": "border-2" },
      "4": { "value": "4px", "cssClass": "border-4" }
    },
    "style": {
      "solid": "border-solid",
      "dashed": "border-dashed",
      "dotted": "border-dotted"
    },
    "defaultColor": "hsl(var(--border))",
    "componentDefaults": {
      "card": "border border-border",
      "input": "border border-input",
      "table": "border border-border",
      "separator": "border-b border-border"
    }
  },

  "focus": {
    "ring": {
      "width": "2px",
      "offset": "2px",
      "color": "hsl(var(--ring))",
      "cssClasses": "focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"
    },
    "description": "All interactive elements should use consistent focus styling"
  },

  "transitions": {
    "default": {
      "duration": "200ms",
      "timing": "ease-in-out",
      "properties": ["color", "background-color", "border-color", "transform", "opacity"],
      "cssClass": "transition-colors"
    },
    "fast": {
      "duration": "150ms",
      "timing": "ease-in-out",
      "cssClass": "transition-all duration-150"
    },
    "slow": {
      "duration": "300ms",
      "timing": "ease-in-out",
      "cssClass": "transition-all duration-300"
    },
    "interactive": {
      "cssClass": "interactive",
      "description": "Custom class for hover/active states with appropriate transitions"
    }
  },

  "animations": {
    "accordionDown": {
      "keyframes": {
        "from": { "height": "0" },
        "to": { "height": "var(--radix-accordion-content-height)" }
      },
      "duration": "0.2s",
      "timing": "ease-out",
      "cssClass": "animate-accordion-down"
    },
    "accordionUp": {
      "keyframes": {
        "from": { "height": "var(--radix-accordion-content-height)" },
        "to": { "height": "0" }
      },
      "duration": "0.2s",
      "timing": "ease-out",
      "cssClass": "animate-accordion-up"
    },
    "pulse": {
      "cssClass": "animate-pulse",
      "usage": "Loading skeleton states"
    },
    "spin": {
      "cssClass": "animate-spin",
      "usage": "Loading spinners"
    }
  },

  "opacity": {
    "disabled": "0.5",
    "hover": "0.8",
    "overlay": "0.8",
    "cssClasses": {
      "disabled": "disabled:opacity-50",
      "hover": "hover:opacity-80",
      "overlay": "bg-black/80"
    }
  }
}
