{
  "$schema": "https://design-tokens.github.io/schema/v1",
  "name": "Computis Design Tokens - Spacing",
  "version": "1.0.0",
  "description": "Spacing scale for Computis crypto tax management platform",

  "baseUnit": {
    "value": "4px",
    "description": "All spacing values are multiples of 4px"
  },

  "spacing": {
    "0": { "value": "0px", "rem": "0rem", "cssClass": "0", "usage": "No spacing" },
    "px": { "value": "1px", "rem": "0.0625rem", "cssClass": "px", "usage": "Fine borders/dividers" },
    "0.5": { "value": "2px", "rem": "0.125rem", "cssClass": "0.5", "usage": "Tight gaps" },
    "1": { "value": "4px", "rem": "0.25rem", "cssClass": "1", "usage": "Icon margins, tight spacing" },
    "1.5": { "value": "6px", "rem": "0.375rem", "cssClass": "1.5", "usage": "Small element gaps" },
    "2": { "value": "8px", "rem": "0.5rem", "cssClass": "2", "usage": "Compact padding, button gaps" },
    "2.5": { "value": "10px", "rem": "0.625rem", "cssClass": "2.5", "usage": "Small form field gaps" },
    "3": { "value": "12px", "rem": "0.75rem", "cssClass": "3", "usage": "Default gaps, input padding" },
    "3.5": { "value": "14px", "rem": "0.875rem", "cssClass": "3.5", "usage": "Increased element spacing" },
    "4": { "value": "16px", "rem": "1rem", "cssClass": "4", "usage": "Standard section padding" },
    "5": { "value": "20px", "rem": "1.25rem", "cssClass": "5", "usage": "Medium section spacing" },
    "6": { "value": "24px", "rem": "1.5rem", "cssClass": "6", "usage": "Card padding, section gaps" },
    "7": { "value": "28px", "rem": "1.75rem", "cssClass": "7", "usage": "Large element spacing" },
    "8": { "value": "32px", "rem": "2rem", "cssClass": "8", "usage": "Container padding" },
    "9": { "value": "36px", "rem": "2.25rem", "cssClass": "9", "usage": "Large section gaps" },
    "10": { "value": "40px", "rem": "2.5rem", "cssClass": "10", "usage": "Major section separation" },
    "11": { "value": "44px", "rem": "2.75rem", "cssClass": "11", "usage": "Touch-target minimum size" },
    "12": { "value": "48px", "rem": "3rem", "cssClass": "12", "usage": "Large containers" },
    "14": { "value": "56px", "rem": "3.5rem", "cssClass": "14", "usage": "Header heights" },
    "16": { "value": "64px", "rem": "4rem", "cssClass": "16", "usage": "Large headers, hero sections" },
    "20": { "value": "80px", "rem": "5rem", "cssClass": "20", "usage": "Page margins" },
    "24": { "value": "96px", "rem": "6rem", "cssClass": "24", "usage": "Large page sections" },
    "28": { "value": "112px", "rem": "7rem", "cssClass": "28", "usage": "Hero sections" },
    "32": { "value": "128px", "rem": "8rem", "cssClass": "32", "usage": "Major page divisions" },
    "36": { "value": "144px", "rem": "9rem", "cssClass": "36", "usage": "Extra large spacing" },
    "40": { "value": "160px", "rem": "10rem", "cssClass": "40", "usage": "Maximum section spacing" },
    "44": { "value": "176px", "rem": "11rem", "cssClass": "44", "usage": "Large decorative spacing" },
    "48": { "value": "192px", "rem": "12rem", "cssClass": "48", "usage": "Full-width decorative" },
    "52": { "value": "208px", "rem": "13rem", "cssClass": "52", "usage": "Extra large decorative" },
    "56": { "value": "224px", "rem": "14rem", "cssClass": "56", "usage": "Major decorative spacing" },
    "60": { "value": "240px", "rem": "15rem", "cssClass": "60", "usage": "Full-page sections" },
    "64": { "value": "256px", "rem": "16rem", "cssClass": "64", "usage": "Sidebar width (16rem)" },
    "72": { "value": "288px", "rem": "18rem", "cssClass": "72", "usage": "Mobile sidebar width" },
    "80": { "value": "320px", "rem": "20rem", "cssClass": "80", "usage": "Large component widths" },
    "96": { "value": "384px", "rem": "24rem", "cssClass": "96", "usage": "Maximum component widths" }
  },

  "semanticSpacing": {
    "componentGap": {
      "xs": { "value": "0.5rem", "token": "2", "usage": "Tight icon spacing" },
      "sm": { "value": "0.75rem", "token": "3", "usage": "Compact element gaps" },
      "md": { "value": "1rem", "token": "4", "usage": "Standard gaps" },
      "lg": { "value": "1.5rem", "token": "6", "usage": "Loose spacing" },
      "xl": { "value": "2rem", "token": "8", "usage": "Section gaps" }
    },
    "padding": {
      "button": { "x": "1rem", "y": "0.5rem", "description": "Button padding (px-4 py-2)" },
      "input": { "x": "0.75rem", "y": "0.5rem", "description": "Input padding (px-3 py-2)" },
      "card": { "value": "1.5rem", "description": "Card padding (p-6)" },
      "cardCompact": { "value": "1rem", "description": "Compact card padding (p-4)" },
      "section": { "value": "1.5rem", "description": "Section padding (p-6)" },
      "page": { "x": "1rem", "xMd": "1.5rem", "y": "1.5rem", "description": "Page container padding" }
    },
    "margin": {
      "paragraph": { "value": "1rem", "description": "Spacing between paragraphs" },
      "section": { "value": "2rem", "description": "Spacing between sections" },
      "heading": { "top": "1.5rem", "bottom": "0.75rem", "description": "Heading margins" }
    }
  },

  "sidebarDimensions": {
    "width": {
      "expanded": { "value": "16rem", "cssVar": "--sidebar-width", "description": "256px expanded" },
      "mobile": { "value": "18rem", "cssVar": "--sidebar-width-mobile", "description": "288px mobile" },
      "collapsed": { "value": "3rem", "cssVar": "--sidebar-width-icon", "description": "48px icon-only" }
    }
  },

  "containerSizes": {
    "sm": { "value": "640px", "description": "Small containers" },
    "md": { "value": "768px", "description": "Medium containers" },
    "lg": { "value": "1024px", "description": "Large containers" },
    "xl": { "value": "1280px", "description": "Extra large containers" },
    "2xl": { "value": "1400px", "description": "Maximum content width" }
  },

  "componentHeights": {
    "button": {
      "sm": { "value": "2.25rem", "px": "36px", "cssClass": "h-9" },
      "default": { "value": "2.75rem", "px": "44px", "cssClass": "h-11" },
      "lg": { "value": "3rem", "px": "48px", "cssClass": "h-12" }
    },
    "input": {
      "sm": { "value": "2.25rem", "px": "36px", "cssClass": "h-9" },
      "default": { "value": "2.75rem", "px": "44px", "cssClass": "h-11" },
      "lg": { "value": "3rem", "px": "48px", "cssClass": "h-12" }
    },
    "tableRow": { "value": "3rem", "px": "48px", "cssClass": "h-12" },
    "header": { "value": "3.5rem", "px": "56px", "description": "App header height" }
  },

  "touchTargets": {
    "minimum": { "value": "44px", "cssClass": "min-w-[44px] min-h-[44px]", "description": "WCAG minimum" },
    "comfortable": { "value": "48px", "cssClass": "min-w-12 min-h-12", "description": "Comfortable touch" }
  },

  "gridGap": {
    "tight": { "value": "0.5rem", "token": "2", "cssClass": "gap-2" },
    "compact": { "value": "0.75rem", "token": "3", "cssClass": "gap-3" },
    "default": { "value": "1rem", "token": "4", "cssClass": "gap-4" },
    "comfortable": { "value": "1.5rem", "token": "6", "cssClass": "gap-6" },
    "loose": { "value": "2rem", "token": "8", "cssClass": "gap-8" }
  },

  "patterns": {
    "cardGrid": {
      "gap": "gap-4 md:gap-6",
      "columns": "grid-cols-1 md:grid-cols-2 lg:grid-cols-4"
    },
    "formFields": {
      "gap": "space-y-4",
      "labelGap": "space-y-2"
    },
    "buttonGroup": {
      "gap": "gap-2"
    },
    "pageContent": {
      "padding": "p-4 md:p-6",
      "sectionGap": "space-y-6"
    }
  }
}
