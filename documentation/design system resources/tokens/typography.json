{
  "$schema": "https://design-tokens.github.io/schema/v1",
  "name": "Computis Design Tokens - Typography",
  "version": "1.0.0",
  "description": "Typography tokens for Computis crypto tax management platform",

  "fontFamilies": {
    "sans": {
      "value": ["Noto Sans", "system-ui", "sans-serif"],
      "description": "Primary sans-serif font for UI elements",
      "cssClass": "font-sans",
      "usage": "Body text, headings, labels, buttons"
    },
    "mono": {
      "value": ["JetBrains Mono", "Fira Code", "monospace"],
      "description": "Monospace font for code and numbers",
      "cssClass": "font-mono",
      "usage": "Code snippets, transaction amounts, wallet addresses"
    }
  },

  "fontSizes": {
    "xs": {
      "value": "0.75rem",
      "px": "12px",
      "lineHeight": "1rem",
      "cssClass": "text-xs",
      "usage": "Fine print, labels, badges"
    },
    "sm": {
      "value": "0.875rem",
      "px": "14px",
      "lineHeight": "1.25rem",
      "cssClass": "text-sm",
      "usage": "Secondary text, table content"
    },
    "base": {
      "value": "1rem",
      "px": "16px",
      "lineHeight": "1.5rem",
      "cssClass": "text-base",
      "usage": "Body text, form inputs"
    },
    "lg": {
      "value": "1.125rem",
      "px": "18px",
      "lineHeight": "1.75rem",
      "cssClass": "text-lg",
      "usage": "Card titles, section headers"
    },
    "xl": {
      "value": "1.25rem",
      "px": "20px",
      "lineHeight": "1.75rem",
      "cssClass": "text-xl",
      "usage": "Page subtitles"
    },
    "2xl": {
      "value": "1.5rem",
      "px": "24px",
      "lineHeight": "2rem",
      "cssClass": "text-2xl",
      "usage": "Page titles, card titles"
    },
    "3xl": {
      "value": "1.875rem",
      "px": "30px",
      "lineHeight": "2.25rem",
      "cssClass": "text-3xl",
      "usage": "Hero titles"
    },
    "4xl": {
      "value": "2.25rem",
      "px": "36px",
      "lineHeight": "2.5rem",
      "cssClass": "text-4xl",
      "usage": "Large display text"
    }
  },

  "fontWeights": {
    "normal": {
      "value": "400",
      "cssClass": "font-normal",
      "usage": "Body text, descriptions"
    },
    "medium": {
      "value": "500",
      "cssClass": "font-medium",
      "usage": "Labels, navigation items"
    },
    "semibold": {
      "value": "600",
      "cssClass": "font-semibold",
      "usage": "Headings, buttons, badges"
    },
    "bold": {
      "value": "700",
      "cssClass": "font-bold",
      "usage": "Important metrics, emphasis"
    }
  },

  "lineHeights": {
    "none": {
      "value": "1",
      "cssClass": "leading-none",
      "usage": "Single-line elements"
    },
    "tight": {
      "value": "1.25",
      "cssClass": "leading-tight",
      "usage": "Compact text, badges"
    },
    "snug": {
      "value": "1.375",
      "cssClass": "leading-snug",
      "usage": "Headings"
    },
    "normal": {
      "value": "1.5",
      "cssClass": "leading-normal",
      "usage": "Body text (default)"
    },
    "relaxed": {
      "value": "1.625",
      "cssClass": "leading-relaxed",
      "usage": "Long-form content"
    },
    "loose": {
      "value": "2",
      "cssClass": "leading-loose",
      "usage": "Very readable text"
    }
  },

  "letterSpacing": {
    "tighter": {
      "value": "-0.05em",
      "cssClass": "tracking-tighter"
    },
    "tight": {
      "value": "-0.025em",
      "cssClass": "tracking-tight"
    },
    "normal": {
      "value": "0",
      "cssClass": "tracking-normal"
    },
    "wide": {
      "value": "0.025em",
      "cssClass": "tracking-wide"
    },
    "wider": {
      "value": "0.05em",
      "cssClass": "tracking-wider"
    },
    "widest": {
      "value": "0.1em",
      "cssClass": "tracking-widest"
    }
  },

  "responsiveTypography": {
    "description": "Fluid typography using CSS clamp() for responsive scaling",
    "h1": {
      "fontSize": "clamp(1.75rem, 1.2rem + 1.2vw, 2.25rem)",
      "lineHeight": "1.2",
      "usage": "Main page headings"
    },
    "h2": {
      "fontSize": "clamp(1.5rem, 1.1rem + 0.9vw, 1.875rem)",
      "lineHeight": "1.25",
      "usage": "Section headings"
    },
    "h3": {
      "fontSize": "clamp(1.25rem, 1rem + 0.6vw, 1.5rem)",
      "lineHeight": "1.3",
      "usage": "Card titles, subsections"
    },
    "h4": {
      "fontSize": "clamp(1.125rem, 0.95rem + 0.4vw, 1.25rem)",
      "lineHeight": "1.35",
      "usage": "Minor headings"
    },
    "body": {
      "fontSize": "clamp(16px, 0.8vw + 12px, 18px)",
      "lineHeight": "1.5",
      "usage": "Body text base size"
    }
  },

  "presets": {
    "pageTitle": {
      "fontSize": "text-2xl",
      "fontWeight": "font-semibold",
      "lineHeight": "leading-none",
      "tracking": "tracking-tight",
      "example": "<h1 className=\"text-2xl font-semibold leading-none tracking-tight\">"
    },
    "sectionTitle": {
      "fontSize": "text-lg",
      "fontWeight": "font-semibold",
      "lineHeight": "leading-none",
      "tracking": "tracking-tight",
      "example": "<h2 className=\"text-lg font-semibold leading-none tracking-tight\">"
    },
    "cardTitle": {
      "fontSize": "text-sm",
      "fontWeight": "font-medium",
      "color": "text-gray-600",
      "example": "<h3 className=\"text-sm font-medium text-gray-600\">"
    },
    "metricValue": {
      "fontSize": "text-xl",
      "fontWeight": "font-bold",
      "color": "text-gray-900",
      "example": "<span className=\"text-xl font-bold text-gray-900\">"
    },
    "tableHeader": {
      "fontSize": "text-sm",
      "fontWeight": "font-medium",
      "color": "text-muted-foreground",
      "example": "<th className=\"text-sm font-medium text-muted-foreground\">"
    },
    "tableCell": {
      "fontSize": "text-sm",
      "fontWeight": "font-normal",
      "example": "<td className=\"text-sm\">"
    },
    "buttonText": {
      "fontSize": "text-sm",
      "fontWeight": "font-medium",
      "example": "<button className=\"text-sm font-medium\">"
    },
    "badgeText": {
      "fontSize": "text-xs",
      "fontWeight": "font-semibold",
      "example": "<span className=\"text-xs font-semibold\">"
    },
    "helpText": {
      "fontSize": "text-sm",
      "fontWeight": "font-normal",
      "color": "text-muted-foreground",
      "example": "<p className=\"text-sm text-muted-foreground\">"
    },
    "monoNumber": {
      "fontFamily": "font-mono",
      "fontSize": "text-sm",
      "example": "<span className=\"font-mono text-sm\">122,124</span>"
    }
  }
}
